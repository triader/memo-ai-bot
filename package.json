{
  "name": "language-learning-bot",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev:frontend": "vite",
    "dev:backend": "NODE_OPTIONS='--no-deprecation' tsx watch ./backend/server.ts",
    "start": "npm run build && NODE_OPTIONS='--no-deprecation' node dist/backend/server.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "test": "PORT=4000 NODE_OPTIONS='--no-deprecation' node dist/backend/server.js",
    "build": "tsc",
    "build:backend": "tsc",
    "build:frontend": "vite build",
    "lint": "eslint . --ext ts,tsx",
    "preview": "vite preview",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "lucide-react": "^0.344.0",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.65.1",
    "openai": "^4.28.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.6",
    "@types/node-telegram-bot-api": "^0.64.7",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2"
  }
}
